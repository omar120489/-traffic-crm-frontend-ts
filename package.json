{
  "name": "traffic-crm",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers"
  ],
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "npm run --workspaces --if-present dev",
    "build": "npm run --workspaces --if-present build",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "lint": "npm run --workspaces --if-present lint",
    "test": "npm run --workspaces --if-present test",
    "docker:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker/docker-compose.yml down",
    "audit:full": "pnpm --filter ./apps/frontend run audit:full",
    "fix:typescript": "pnpm --filter ./apps/frontend run fix:typescript",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "db:up": "docker compose -f infra/docker/docker-compose.yml up -d postgres",
    "db:migrate": "npm run --workspace apps/core-api --if-present prisma:push",
    "db:seed": "npm run --workspace apps/core-api --if-present db:seed",
    "dev:jwt": "node apps/core-api/scripts/make-dev-jwt.mjs",
    "sdk:gen": "npm run --workspace packages/sdk-js --if-present gen",
    "dev:sdk": "npm run --workspace apps/core-api --if-present openapi:emit && npm run --workspace packages/sdk-js --if-present codegen && npm run --workspace packages/sdk-js --if-present build",
    "greenlight": "bash scripts/sprint2-greenlight.sh",
    "preflight": "npm ci && npm run --workspace apps/frontend --if-present typecheck:sprint2 && npm run --workspace apps/frontend --if-present lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/frontend/src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0 --fix",
      "bash -c 'cd apps/frontend && npx tsc --noEmit -p tsconfig.json'"
    ],
    "*.md": [
      "markdownlint-cli2 --fix --config .markdownlint.json"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "markdownlint-rule-search-replace": "^1.2.0",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2"
  }
}
