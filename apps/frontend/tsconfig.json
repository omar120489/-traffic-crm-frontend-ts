{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // PRAGMATIC MODE: Relaxed for rapid development
    
    // PRAGMATIC MODE: Relaxed for rapid development
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    
    "noUncheckedIndexedAccess": false,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@data/*": ["./src/data/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@views/*": ["./src/views/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@types/*": ["./src/types/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./src/assets/*"],
      "@lib/*": ["./src/lib/*"],
      "utils/*": ["./src/utils/*"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "services": ["./src/services"],
      "services/*": ["./src/services/*"],
      "config": ["./src/config.ts"],
      "themes": ["./src/themes/index.tsx"],
      "contexts/*": ["./src/contexts/*"],
      "api/*": ["./src/api/*"],
      "menu-items": ["./src/menu-items"],
      "store": ["./src/store"],
      "store/*": ["./src/store/*"],
      "hooks/*": ["./src/hooks/*"],
      "layout/*": ["./src/layout/*"],
      "layouts/*": ["./src/layouts/*"],
      "views/*": ["./src/views/*"],
      "ui-component/*": ["./src/ui-component/*"]
    },
    "types": [
      "vitest/globals",
      "vite/client",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src",
    "vite.config.mjs",
    "vitest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "backup_*",
    ".project_audit",
    "e2e",
    "src/_archive",
    "src/legacy",
    "src/_legacy"
  ]
}
