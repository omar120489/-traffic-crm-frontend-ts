datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Org {
  id        String    @id @default(cuid())
  name      String
  users     User[]
  contacts  Contact[]
  companies Company[]
  leads     Lead[]
  deals     Deal[]
  createdAt DateTime  @default(now())
}

model User {
  id        String   @id @default(cuid())
  orgId     String
  org       Org      @relation(fields: [orgId], references: [id])
  email     String   @unique
  name      String
  role      String
  createdAt DateTime @default(now())
}

model Company {
  id        String    @id @default(cuid())
  orgId     String
  org       Org       @relation(fields: [orgId], references: [id])
  name      String
  domain    String?
  contacts  Contact[]
  deals     Deal[]
  createdAt DateTime  @default(now())
}

model Contact {
  id        String   @id @default(cuid())
  orgId     String
  org       Org      @relation(fields: [orgId], references: [id])
  name      String
  email     String?
  phone     String?
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  leads     Lead[]
  deals     Deal[]
  createdAt DateTime @default(now())
}

model Lead {
  id        String   @id @default(cuid())
  orgId     String
  org       Org      @relation(fields: [orgId], references: [id])
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id])
  source    String?
  status    String   @default("new")
  score     Int      @default(0)
  ownerId   String?
  createdAt DateTime @default(now())
}

model Deal {
  id          String   @id @default(cuid())
  orgId       String
  org         Org      @relation(fields: [orgId], references: [id])
  title       String
  amountCents Int      @default(0)
  currency    String   @default("USD")
  stage       String   @default("new")
  ownerId     String?
  contactId   String?
  contact     Contact? @relation(fields: [contactId], references: [id])
  companyId   String?
  company     Company? @relation(fields: [companyId], references: [id])
  closeDate   DateTime?
  createdAt   DateTime @default(now())
}

