{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./core/*"],
      "@data/*": ["./data/*"],
      "@features/*": ["./features/*"],
      "@shared/*": ["./shared/*"],
      "@styles/*": ["./styles/*"]
    },
    "types": ["vitest/globals", "vite/client", "@testing-library/jest-dom"]
  },
  "include": ["src", "vite.config.mjs", "vitest.setup.ts", "**/*.test.ts", "**/*.test.tsx"],
  "exclude": ["node_modules", "dist", "build", "backup_*", ".project_audit", "e2e"]
}
